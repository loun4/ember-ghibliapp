
<thead>
  <tr>
  {{#each cols as |col|}}
      <th
        {{action (action "handleSort" col.key)}}
        class="sorted {{if (eq sortBy col.key) sortDirection}}"
      >
        {{col.title}}
      </th>
  {{/each}}
  </tr>
</thead>

<tbody>
  {{#each sortedData as |item|}}
      {{entity-list/item
          item=item
          cols=cols
          link=link
      }}
  {{/each}}
</tbody>
